page {
    width: 100%;
    height: 100%;
    background-color: aliceblue;
}
.a {
    width: 100%;
    height: 200rpx;
    background-color: aquamarine;
}

.list {
    width: 100%;
    display: flex;
    margin-top: 10rpx;
}

.item {
    display: flex;
    width: 100%;
    height: 320rpx;
}
.info {
    width: 260rpx;
    height: 100%;
    background-color: aquamarine;
    display: flex;
    flex-direction: column;
}
.avatar {
    width: 170rpx;
    height: 170rpx;
    margin-top: 60rpx;
    margin-left: 10rpx;
}
.name {
    margin-left: 10rpx;
    margin-top: 30rpx;
    font-size: 30rpx;
}

.content {
    width: 65%;
    height: 100%;
    display: flex;
    background-color: chartreuse;
    flex-direction: column;
}

.media {
    height: 80%;
    width: 100%;
    background-color: darkorchid;
}
.video {
    width: 360rpx;
    height: 230rpx;
    margin-left: 70rpx;
    margin-top: 20rpx;
}
.operate {
    height: 20%;
    width: 100%;
    display: flex;
    justify-items: center;
}

.del {
    background-color: cyan;
    width: 120rpx !important;
    height: 80%;
    
    font-size: 20rpx;
    margin-top: 10rpx;
    margin-left: 160rpx ;
}

.love {
    background-color: darkorange;
    width: 120rpx !important;
    height: 80%;
    margin-top: 10rpx;
}