<view class="page">
    <button class="btn" hover-class="hover" bindtap="setNickName">
        <view class="view">昵称：</view>
        <text class="txt1" >{{nickName}}</text>
    </button>
    <button class="btn" hover-class="hover" bindtap="chooseSex">
        <view class="view">性别：</view>
        <text class="txt" wx:if="{{gender == 0}}">男</text>
        <text class="txt" wx:else>女</text>
    </button>
    <button class="btn" hover-class="hover" bindtap="setCity">
        <view class="view">校区：</view>
        <text class="txt4" wx:if="{{city == 0}}">小营</text>
        <text class="txt4" wx:if="{{city == 1}}">清河</text>
        <text class="txt4" wx:if="{{city == 2}}">沙河</text>
        <text class="txt4" wx:if="{{city == 3}}">健翔桥</text>
    </button>
    <button class="btn" hover-class="hover" bindtap="setSignature">
        <view class="view">签名：</view>
        <text class="txt2"  wx:if="{{signature}}">{{signature}}</text>
    </button>

</view>
<modal hidden="{{hiddenmodalput}}"  class="modal" 
   			confirm-text="完成" cancel-text="取消" bindcancel="cancel" 
   			bindconfirm="confirm">
     <input type="text" maxlength="8"
     bindinput='getInputValue' value="{{nickName}}" class="input" ></input>
</modal>
<modal hidden="{{hiddenmodalput1}}"  class="modal" 
   			confirm-text="完成" cancel-text="取消" bindcancel="cancel1" 
   			bindconfirm="confirm1">
     <!-- 这里可以自由选择你的输入框类型<input type='text' placeholder="请输入内容" auto-focus/> -->
     <input type="text" maxlength="16" bindinput='getInputValue1' value="{{signature}}" class="input1" ></input>
</modal>